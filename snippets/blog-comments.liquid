<h4 class="blog-details-title comment-title">{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h4>
{% for comment in article.comments %}
<div class="blog-comments-wrap">
  <div class="single-blog-bundel">
    <div class="single-blog-comment">
      <div class="blog-comment-img">
        {% if section.settings.commentator_image %}
        <img src="{{ section.settings.commentator_image | img_url: '94x94', crop: 'center' }}" alt="{{ section.settings.commentator_image.alt }}">
        {% else %}
        <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 | append: '?s=200' }}" />
        {% endif %}
      </div>
      <div class="blog-comment-content">
        <p>{{ comment.content }}</p>
        <div class="comment-name-reply">
          <h5>{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</h5>
        </div>
      </div>
    </div>
  </div>
</div>
{% endfor %}
