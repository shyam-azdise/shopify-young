<div class="product-area section-padding-2 product-area-negative-mrg" id="section-{{ section.id }}">
  <div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%}">
    <div class="product-slider-1 owl-carousel">

      <!-- product-item start -->
      {% assign featured_product = collections[section.settings.special_offer_product] %}
      {% assign featured_product_limit = section.settings.featured_product_limit_handle %}  

      {%- if featured_product == empty -%}
      {% assign a = 1 %}
      {% for i in (1..featured_product_limit) %}

      {% assign product_item = "product-" | append: a  %}
      {% assign a = a | plus: 1 %}
      <div class="kide-product-one" style="margin-bottom: 30px;">
        <div>
          <div>
            {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
          </div>
          <h6>
            Product Title
          </h6>
          <div class="">
            <span>$99.99</span>
          </div>
        </div>
      </div>
      {% if a == 7 %}
      {% assign a = 1 %}
      {% endif %}
      {% endfor %}

      {%- else -%}
      {% for product in featured_product.products limit: featured_product_limit %}
      <div class="kide-product-one">
        {% include 'product-grid-item-kids-1' %}
      </div>        
      {% endfor %}
      {%- endif -%}

    </div>
  </div>
</div>


