<style>
  {%- for block in section.blocks -%}
  {%- case block.type -%}

  {%- when 'product_pages' -%} 
  {%- if block.settings.breadcrumb_banner_image and template == 'product' -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}
  
  {%- when 'collection_pages' -%}
  {%- if template == 'collection' -%}
