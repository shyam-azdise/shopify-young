<div class="product-area cake-product-mrg1 pb-85" id="section-{{ section.id }}">
  <div class="container{% if section.settings.fullwidth_on %}-fluid{% endif %}">
    {% if section.settings.section_title != blank %}
    <div class="section-title-10 text-center mb-50">
      {% if section.settings.section_icon_img_enable %}
      <img src="{% if section.settings.section_title_icon %}{{ section.settings.section_title_icon | img_url: 'master' }}{% else %}https://via.placeholder.com/60x46 {% endif %}" class="lazyload" alt="product">
      {% endif %}
      <h2>{{ section.settings.section_title }}</h2>
      {% if section.settings.section_subtitle != blank %}
      <p>{{ section.settings.section_subtitle }}</p>
      {%endif%}
    </div>
    {%endif%}
    
    
    {% for block in section.blocks %}
    {% case block.type %}
    {% when 'single_ctg' %}
    <div class="product-cake-wrap pb-100">
      <div class="row {% if block.settings.row_reverse %}flex-row-reverse{% endif %} align-items-center">
        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
          <div class="product-cake-img">
            <a href="{{ block.settings.button_url }}">
              <img src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: 'master' }}{% else %}https://via.placeholder.com/555x530 {% endif %}" class="lazyload" alt="product">
            </a>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
          <div class="product-cake-content">
            {% if block.settings.category_title != blank %}
            <h2><a href="{{ block.settings.button_url }}">{{ block.settings.category_title }}</a></h2>
            {%endif%}
            {% if block.settings.category_desc != blank %}
            <p>{{ block.settings.category_desc }}</p>
            {%endif%}
            {% if block.settings.button_title != blank %}
            <div class="btn-style-3 btn-hover-2">
              <a class="animated bs3-white-text bs3-pink-bg bs3-ptb-5 bs3-border-radius hover-text-white ptb-3-black-hover" href="{{ block.settings.button_url }}">{{ block.settings.button_title }}</a>
            </div>
            {%endif%}
          </div>
        </div>
      </div>
    </div>
    {% endcase %}
    {% endfor %}
    
  </div>
</div>





{%- style -%}
  #section-{{ section.id }}{
    {%- for block in section.blocks -%}
    {%- case block.type -%}
    {%- when 'section_margin' -%}
    margin-top: {{ block.settings.section_margin_top }}px;
    margin-bottom: {{ block.settings.section_margin_bottom }}px;
    {%- when 'section_padding' -%}
    padding-top: {{ block.settings.section_padding_top }}px;
    padding-bottom: {{ block.settings.section_padding_bottom }}px;
    {%- when 'section_background' -%}    
    background: {{ block.settings.section_bg_color }} 
      {%- if block.settings.section_bg_image -%}url("{{ block.settings.section_bg_image | img_url: 'master' }}"){%- endif -%} no-repeat scroll center center / cover;
    {%- endcase -%}
    {%- endfor -%}
  }
  @media (min-width: 768px) and (max-width: 991px) {
    #section-{{ section.id }}{
      {%- for block in section.blocks -%}
      {% case block.type %}
      {%- when 'section_margin' -%}
      margin-top: {{ block.settings.section_margin_top_md }}px;
      margin-bottom: {{ block.settings.section_margin_bottom_md }}px;
      {%- when 'section_padding' -%}
      padding-top: {{ block.settings.section_padding_top_md }}px;
      padding-bottom: {{ block.settings.section_padding_bottom_md }}px;
      {%- endcase -%}
      {%- endfor -%}
    }
  }
  @media (max-width: 767px) {
    #section-{{ section.id }}{
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'section_margin' -%}
      margin-top: {{ block.settings.section_margin_top_xs }}px;
      margin-bottom: {{ block.settings.section_margin_bottom_xs }}px;
      {%- when 'section_padding' -%}
      padding-top: {{ block.settings.section_padding_top_xs }}px;
      padding-bottom: {{ block.settings.section_padding_bottom_xs }}px;
      {%- endcase -%}
      {%- endfor -%}
    }
  }

{% if section.settings.category_content_enable %}

.section-title-10 h2 {
    color: {{ section.settings.section_title_color }};
}
.section-title-10 p {
    color: {{ section.settings.section_subtitle_color }};
}

.product-cake-wrap .product-cake-content h2 a {
    color: {{ section.settings.pro_cat_title_color }};
}
.product-cake-wrap .product-cake-content p {
    color: {{ section.settings.pro_cat_content_color }};
}

.btn-style-3 a.bs3-pink-bg {
    background-color: {{ section.settings.pro_cat_button_bg_color }};
}
.btn-style-3 a.bs3-white-text {
    color: {{ section.settings.pro_cat_button_color }};
}

.btn-hover-2 a.ptb-3-black-hover::after {
    background: {{ section.settings.pro_cat_button_bg_hover_color }};
}
.btn-style-3 a.bs3-ptb-5.hover-text-white:hover {
    color: {{ section.settings.pro_cat_button_color_hov }};
}

{%endif%}


{%- endstyle -%}



