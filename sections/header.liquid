<style>
  .theme-logo img{
    max-width: {{ section.settings.logo_width }}px;
  }
  
  /* Header Top Bg Color */
  .bg-gray {
    background-color: {{ section.settings.header_top_bg_color }};
  }
  
  /* Header Social Icon Style */
  .social-icon-style.social-font-dec a {
    font-size: {{ section.settings.Social_Icon_Size }}px;
    color: {{ section.settings.Social_Icon_color }};
  }
  .social-icon-style.social-font-dec a:hover {
    color: {{ section.settings.Social_Icon_color_hov }};
  }
  
  /* Header Offer Message Style */
  .free-delivery h4 {
    font-size: {{ section.settings.Offer_message_Size }}px;
    color: {{ section.settings.Offer_message_color }};
  }
  .free-delivery h4 span {
    color: {{ section.settings.Offer_message_highlight_color }};
  }
  
  /* Header Top Right Side Style */
  .same-style-2 ul > li > a {
    color: {{ section.settings.right_side_color }};
    font-size: {{ section.settings.right_side_font_size }}px;
  }
  .goog-te-gadget-simple .goog-te-menu-value {
    color: {{ section.settings.right_side_color }};
    font-size: {{ section.settings.right_side_font_size }}px;
  }
  .same-style-2 ul > li > a:hover {
    color: {{ section.settings.right_side_color_hov }};
  }
  .goog-te-gadget-simple .goog-te-menu-value:hover {
    color: {{ section.settings.right_side_color_hov }};
  }
  


</style>

