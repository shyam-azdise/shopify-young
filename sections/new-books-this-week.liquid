<div class="product-area bg-gray-4 pt-120 pb-110" id="section-{{ section.id }}">
  <div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%} p-0">
    <div class="newbooks-pl ">
      <div class="row no-gutters align-items-center">
        {% if section.settings.section_title != blank %}
        <div class="col-lg-4">
          <div class="section-title-5 mb-60">
            <h2>{{ section.settings.section_title }}</h2>
            {% if section.settings.section_des != blank %}
            <p>{{ section.settings.section_des }}</p>
            {%endif%}
          </div>
        </div>
        {%endif%}
        <div class="col-lg-8">
          <div class="new-book-slider dot-style-2">
            <!-- product-item start -->
            {% assign featured_product = collections[section.settings.special_offer_product] %}
            {% assign featured_product_limit = section.settings.featured_product_limit_handle %}  

            {%- if featured_product == empty -%}
            {% assign a = 1 %}
            {% for i in (1..featured_product_limit) %}

            {% assign product_item = "product-" | append: a  %}
            {% assign a = a | plus: 1 %}
            <div class="product-plr-2" style="margin-bottom: 30px;">
              <div>
                <div>
                  {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
                </div>
                <h6>
                  Product Title
                </h6>
                <div class="">
                  <span>$99.99</span>
                </div>
              </div>
            </div>
            {% if a == 7 %}
            {% assign a = 1 %}
            {% endif %}
            {% endfor %}

            {%- else -%}
            {% for product in featured_product.products limit: featured_product_limit %}

            <div class="product-plr-2">
              {% include 'product-grid-item-book' %}
            </div>
            {% endfor %}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{%- include 'section-style' -%}

<script>

   /*--------------------------------
        New book slider
    -----------------------------------*/
    $('.new-book-slider').slick({
        slidesToShow: 2,
        slidesToScroll: 1,
        loop: true,
        dots: true,
        arrows: false,
        responsive: [{
                breakpoint: 1500,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 1199,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 991,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 767,
                settings: {
                    autoplay: false,
                    slidesToShow: 2,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 575,
                settings: {
                    autoplay: false,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                }
            }
        ]
    });
  
</script>

