<div class="product-area section-padding-4 padding-46-row-col pt-75 pb-120" id="section-{{ section.id }}">
  <div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%}">
    {% if section.settings.section_title != '' %}
    <div class="section-title-6 text-center mb-55">
      <h2>{{ section.settings.section_title }}</h2>
      {% if section.settings.section_desc != '' %}
      <p>{{ section.settings.section_desc }}</p>
      {%endif%}
    </div>
    {%endif%}

    <div class="row">
      <!-- product-item start -->
      {% assign featured_product = collections[section.settings.special_offer_product] %}
      {% assign featured_product_limit = section.settings.featured_product_limit_handle %}  

      {%- if featured_product == empty -%}
      {% assign a = 1 %}
      {% for i in (1..featured_product_limit) %}

      {% assign product_item = "product-" | append: a  %}
      {% assign a = a | plus: 1 %}
      <div class="col-xl-{{ section.settings.product_column }} col-lg-{{ section.settings.product_column_lg }} col-md-{{ section.settings.product_column_md }} col-sm-{{ section.settings.product_column_sm }} col-{{ section.settings.product_column_xs }}" style="margin-bottom: 30px;">
        <div>
          <div>
            {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
          </div>
          <h6>
            Product Title
          </h6>
          <div class="">
            <span>$99.99</span>
          </div>
        </div>
      </div>
      {% if a == 7 %}
      {% assign a = 1 %}
      {% endif %}
      {% endfor %}

      {%- else -%}
      {% for product in featured_product.products limit: featured_product_limit %}
      <div class="col-xl-{{ section.settings.product_column }} col-lg-{{ section.settings.product_column_lg }} col-md-{{ section.settings.product_column_md }} col-sm-{{ section.settings.product_column_sm }} col-{{ section.settings.product_column_xs }}">
        {% include 'product-grid-item-flower' %}
      </div>        
      {% endfor %}
      {%- endif -%}
    </div>
    
    {% if section.settings.view_more_product != blank %}
    <div class="row">
      <div class="col-12">
        <div class="load-btn-style-1 text-center">
          <a href="{{ section.settings.view_more_product_url }}">
            <span><i class="fa fa-spinner fa-spin"></i></span>
            {{ section.settings.view_more_product }}
          </a>
        </div>
      </div>
    </div>
    {%endif%}
  </div>
</div>



